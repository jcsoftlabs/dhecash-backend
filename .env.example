# ═══════════════════════════════════════
# DheCash Backend — Environment Variables
# ═══════════════════════════════════════

# Server
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Database (PostgreSQL 16)
DATABASE_URL=postgresql://postgres:password@localhost:5432/dhecash

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_ACCESS_SECRET=your-access-secret-key-here
JWT_REFRESH_SECRET=your-refresh-secret-key-here
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# CORS
CORS_ORIGIN=http://localhost:3000

# MonCash
MONCASH_CLIENT_ID=your-moncash-client-id
MONCASH_CLIENT_SECRET=your-moncash-client-secret
MONCASH_BASE_URL=https://sandbox.moncashbutton.digicelgroup.com

# NatCash
NATCASH_CLIENT_ID=your-natcash-client-id
NATCASH_CLIENT_SECRET=your-natcash-client-secret
NATCASH_BASE_URL=https://sandbox.natcash.com

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Webhook
WEBHOOK_SIGNING_SECRET=your-hmac-signing-secret
